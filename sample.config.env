# This is a sample configuration file.
# Rename this file to config.env and fill in your actual values.

# Freepik API key (used by push_to_talk_transcribe)
FREEPIK_API_KEY=your_api_key_here

# WiFi audio source settings
WIFI_HOST=192.168.4.1
WIFI_PORT=5005
WIFI_SAMPLE_RATE=8000

# Whisper model options
MODEL_SIZE=base
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=int8
TRANSCRIBE_LANGUAGE=es

# Audio chunking/flush behavior
SILENCE_TIMEOUT=1.5     # flush after this long without new audio
MIN_AUDIO_SEC=4.0       # drop clips shorter than this
MAX_BUFFER_SEC=16.0     # force flush when buffer exceeds this length

# Save raw WiFi audio to WAV (0 to disable, 1 to enable)
SAVE_WIFI_WAV=0
SAVE_CLIP_WAV=0
CLIP_WAV_DIR=clips

# Freepik image generation (set ENABLE_FREEPIK=1 to generate images from transcripts)
ENABLE_FREEPIK=0
FREEPIK_WEBHOOK_URL=https://www.example.com/webhook
PRINT_IMAGE=0
PRINT_COMMAND=/usr/bin/lp
OPEN_IMAGE=0

DEBUG_TIMING=0
DEBUG=1